/usr/local/apache/domlogs/* {
    missingok
    notifempty
    sharedscripts
    size 100M
    rotate 10
    delaycompress
    create 640 nobody root
    postrotate
      if [ -f /var/run/nginx.pid ] ;then
        /usr/bin/kill -USR1 `cat /var/run/nginx.pid` && exit 0
      else
        exit 0
      fi
    endscript
}
