# Unison preferences file
root = /home
root = ssh://root@{{ item }}:{{ hostvars[item]['ansible_port'] }}//home
ignore = Path virtfs
ignore = Path */mail
ignore = Path */cache
ignore = Path */perl5
ignore = Path */.cpanel
ignore = Path */.cphorde
ignore = Path */etc
ignore = Path */public_ftp
ignore = Path */tmp
ignore = Path .cpanm
ignore = Path .cpan
ignore = Path .cpcpan
ignore = Path cpeasyapache
ignore = Path cprestore
ignore = Path cPanelInstall
ignore = Name *.log
ignore = Name *_log
ignore = Name *.tmp
batch = true
auto = true
repeat = 300
fastcheck=true
group=true
owner=true
silent=true
times=false
dumbtty=true
maxerrors=1024
prefer = /home
log=true
logfile = /var/log/unison-{{ item }}.log
