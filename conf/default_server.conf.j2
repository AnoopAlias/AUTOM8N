        listen localhost:80 backlog=16384 reuseport deferred;
        server_name localhost;
        access_log off;
        location / {
           proxy_pass   http://127.0.0.1:9999;
          }

          location /whm-server-status/ {
             proxy_pass   http://127.0.0.1:9999;
            }
