/var/log/nginx/*_log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 nobody adm
        sharedscripts
        prerotate
            if [ -f /usr/nginx/scripts/nxapi-learn.sh ]; then
              /usr/nginx/scripts/nxapi-learn.sh; exit 0
            else
              exit 0
            fi
        endscript
        postrotate
            [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
        endscript
}
